{
  "name": "xylemical/composer-dev-bundle",
  "type": "composer-plugin",
  "license": "MIT",
  "description": "Provides support for development.",
  "homepage": "https://github.com/xylemical/composer-dev-bundle",
  "autoload": {
    "psr-4": {
      "Xylemical\\Development\\Composer\\": "src/"
    }
  },
  "extra": {
    "class": "Xylemical\\Development\\Composer\\Plugin"
  },
  "require": {
    "php": ">7.4",
    "composer-plugin-api": ">2.0",
    "phpunit/phpunit": ">9.3",
    "phpspec/prophecy-phpunit": ">2.0",
    "phpstan/phpstan": ">0.12.48",
    "drupal/coder": ">8.3",
    "squizlabs/php_codesniffer": ">3.5",
    "dealerdirect/phpcodesniffer-composer-installer": ">0.7.0"
  },
  "require-dev": {
    "composer/composer": ">2.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "tests": "vendor/bin/phpunit && vendor/bin/phpstan analyse && vendor/bin/phpcs",
    "test-coverage": "php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html report"
  }
}
